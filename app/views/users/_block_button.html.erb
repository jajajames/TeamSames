<div id="block_button_holder">
  <% if current_user.blocking?(user) %>
    <%= link_to "UnBlock User", unblock_path(user_id: user.id), remote: true, method: :delete, class: "btn btn-default", id: "block-btn" %>
  <% else %>
    <%= link_to "Block User", block_path(user_id: user.id), remote: true, class: "btn btn-default", id: "unblock-btn" %>
  <% end %>
</div>
